	function selectAll(obj){
	
	    var checks = $("input[name='checkbox']");
	    
        if($(obj).prop("checked")){
	    
	      checks.each(function(index){
	    
	          var flag = $(this).prop("checked");
	         
	          if(!flag){
	          
	              $(this).prop("checked", "true");
	          }
	    
	       })
	    
	    }else{
	    
	      checks.each(function(index){
	    
	          var flag = $(this).prop("checked");
	          
	          if(flag){
	          
	              $(this).prop("checked", false);
	          }
	    
	       })
	    }
	
	    }
	
